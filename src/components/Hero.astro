---
const { title, text } = Astro.props;
---

<section class="hero">
  <div class="text-box">
    <h1>{title}</h1>
    <p>{text}</p>
  </div>
</section>

<style>
  .hero {
    position: relative;
    width: 100%;
    height: 70vh;
    background-image: url();
  }

  .text-box {
    position: absolute;
    left: 30px;
    bottom: 50px;
    width: 30vw;
    height: fit-content;
  }
</style>
