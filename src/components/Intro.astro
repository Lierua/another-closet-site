---
const { title, subtitle, text } = Astro.props;
---

<section>
  <div class="text-box">
    <h2>{title}</h2>
    <h3>{subtitle}</h3>
    <p>{text}</p>
  </div>
</section>

<style>
  section {
    background-color: var(--color-charcoal);
    width: 100%;
    height: 40vh;
    position: relative;
    padding: 2rem;
  }

  .text-box {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 40%;
    transform: translate(-50%, -50%);
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  h2 {
    margin-bottom: 1rem;
    color: var(--color-lightGreen);
  }

  h3 {
    margin-bottom: 0.5rem;
    color: var(--color-lightGreen);
  }

  p {
    margin-bottom: 0.5rem;
    color: var(--color-lightGreen);
  }
</style>
