---
import Hoverframe from "./Hoverframe.astro";
import Button from "./Button.astro";
const { title, subtitle } = Astro.props;
---

<section>
  <div class="text-box">
    <h2>{title}</h2>
    <h3>{subtitle}</h3>
    <slot />
  </div>
  <div class="visibility">
    <Hoverframe title="Kontak os" position="center" ypos="85%" xpos2="10%"><Button link="https://www.anothercloset.dk/" text="KONTAKT" /></Hoverframe>
  </div>
</section>

<style>
  section {
    background-color: var(--color-charcoal);
    width: 100%;
    height: 40vh;
    position: relative;
  }

  .text-box {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 50vw;
    transform: translate(-50%, -50%);
    display: flex;
    flex-direction: column;
    align-items: start;
  }

  h2 {
    margin-bottom: 0.5rem;
    color: var(--color-lightGreen);
    width: 100%;
    font-weight: 500;
    font-family: "Karla", sans-serif;
  }

  h3 {
    margin-bottom: 0.2rem;
    color: var(--color-lightGreen);
  }

  .text-box p {
    margin-bottom: 0.5rem;
    color: var(--color-lightGreen);
    width: 100%;
  }

  @media (max-width: 600px) {
    section {
      display: flex;
      flex-direction: column;
      align-items: center;
      width: 100%;
      height: 300px;
    }

    .text-box {
      width: 100%;
      padding: 5px 20px;
    }

    .visibility {
      display: none;
    }
  }
</style>
