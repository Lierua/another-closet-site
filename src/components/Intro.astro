---
const { title, subtitle } = Astro.props;
---

<section>
  <div class="text-box">
    <h2>{title}</h2>
    <h3>{subtitle}</h3>
    <slot />
  </div>
</section>

<style>
  section {
    background-color: var(--color-charcoal);
    width: 100%;
    height: 40vh;
    position: relative;
    padding: 4rem 0rem;
  }

  .text-box {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 35%;
    transform: translate(-50%, -50%);
    display: flex;
    flex-direction: column;
    align-items: start;
  }

  h2 {
    margin-bottom: 0.5rem;
    color: var(--color-lightGreen);
    width: 100%;
    font-family: "Karla", sans-serif;
  }

  h3 {
    margin-bottom: 0.2rem;
    color: var(--color-lightGreen);
  }

  .text-box p {
    margin-bottom: 0.5rem;
    color: var(--color-lightGreen);
    width: 100%;
  }
</style>
