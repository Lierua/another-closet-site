---
const { title, position, xpos, xpos2, ypos } = Astro.props;
---

<section class="boxbox" style={`top:${ypos}; left:${xpos}; right:${xpos2};`}>
  <div class="txtbox">
    <h3>{title}</h3>
  </div>

  <div class={position}>
    <slot />
  </div>
</section>

<style>
  section {
    margin: 0;
    padding: 20px;
    position: absolute;
    min-width: 250px;
    background-color: var(--color-white);
  }

  h3 {
    font-weight: 700;
  }

  .center {
    display: flex;
    flex-direction: column;
    align-self: center;
  }

  .txtbox {
    margin-bottom: 1rem;
  }
</style>
